<!-- app/views/users/new.html.erb -->
<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
  <h2 class="text-3xl font-bold mb-6">Sign Up</h2>
  
  <%= form_with model: @user, url: signup_path, class: "space-y-4" do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= f.label :username, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :username, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-600", 
                                   placeholder: "Choose a username" %>
    </div>
    
    <div>
      <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-600",
                                       placeholder: "Enter password" %>
    </div>
    
    <div>
      <%= f.label :password_confirmation, "Confirm Password", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-600",
                                                    placeholder: "Confirm password" %>
    </div>
    
    <%= f.submit "Sign Up", class: "w-full bg-blue-600 text-white py-3 rounded-lg font-bold hover:bg-blue-700 cursor-pointer" %>
  <% end %>
  
  <p class="mt-4 text-center text-gray-600">
    Already have an account? 
    <%= link_to "Login", login_path, class: "text-blue-600 hover:underline" %>
  </p>
</div>