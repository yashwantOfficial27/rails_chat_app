<!-- app/views/sessions/new.html.erb -->
<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
  <h2 class="text-3xl font-bold mb-6">Login</h2>
  
  <%= form_with url: login_path, class: "space-y-4" do |f| %>
    <div>
      <%= label_tag :username, "Username", class: "block text-gray-700 font-bold mb-2" %>
      <%= text_field_tag :username, nil, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-600",
                                          placeholder: "Enter your username" %>
    </div>
    
    <div>
      <%= label_tag :password, "Password", class: "block text-gray-700 font-bold mb-2" %>
      <%= password_field_tag :password, nil, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-600",
                                              placeholder: "Enter your password" %>
    </div>
    
    <%= submit_tag "Login", class: "w-full bg-blue-600 text-white py-3 rounded-lg font-bold hover:bg-blue-700 cursor-pointer" %>
  <% end %>
  
  <p class="mt-4 text-center text-gray-600">
    Don't have an account? 
    <%= link_to "Sign up", signup_path, class: "text-blue-600 hover:underline" %>
  </p>
  
  <div class="mt-6 p-4 bg-gray-100 rounded">
    <p class="text-sm text-gray-600 font-bold mb-2">Test credentials:</p>
    <p class="text-sm text-gray-600">Username: <code>alice</code> | Password: <code>password</code></p>
  </div>
</div>