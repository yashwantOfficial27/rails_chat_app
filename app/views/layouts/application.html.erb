<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Chat Rails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100">
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-lg">
      <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <div class="flex items-center space-x-4">
          <%= link_to "Chat Rails", root_path, class: "text-2xl font-bold text-blue-600" %>
          <% if logged_in? %>
            <%= link_to "Rooms", rooms_path, class: "text-gray-600 hover:text-blue-600" %>
          <% end %>
        </div>
        
        <div class="flex items-center space-x-4">
          <% if logged_in? %>
            <span class="text-gray-600">Hello, <strong><%= current_user.username %></strong></span>
            <%= button_to "Logout", logout_path, method: :delete, 
                         class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" %>
          <% else %>
            <%= link_to "Login", login_path, class: "text-blue-600 hover:underline" %>
            <%= link_to "Signup", signup_path, 
                       class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="max-w-7xl mx-auto mt-4 px-4">
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
          <%= flash[:notice] %>
        </div>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="max-w-7xl mx-auto mt-4 px-4">
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <%= flash[:alert] %>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto mt-8 px-4">
      <%= yield %>
    </main>
  </body>
</html>