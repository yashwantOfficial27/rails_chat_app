<!-- app/views/rooms/index.html.erb -->
<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold">Chat Rooms</h1>
  <%= link_to "Create New Room", new_room_path, 
             class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @rooms.each do |room| %>
    <%= link_to room, class: "block bg-white p-6 rounded-lg shadow hover:shadow-lg transition" do %>
      <h3 class="text-xl font-bold text-gray-800 mb-2"><%= room.name %></h3>
      <p class="text-gray-600 mb-4"><%= room.description %></p>
      <div class="flex justify-between items-center text-sm text-gray-500">
        <span><%= pluralize(room.messages.count, 'message') %></span>
        <span class="text-blue-600 font-bold">Enter â†’</span>
      </div>
    <% end %>
  <% end %>
</div>

<% if @rooms.empty? %>
  <div class="text-center py-12 text-gray-600">
    <p class="text-xl mb-4">No rooms yet!</p>
    <%= link_to "Create the first room", new_room_path, 
               class: "text-blue-600 hover:underline" %>
  </div>
<% end %>