<!-- app/views/rooms/new.html.erb -->
<div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-lg">
  <h2 class="text-3xl font-bold mb-6">Create New Room</h2>
  
  <%= form_with model: @room, class: "space-y-4" do |f| %>
    <% if @room.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul>
          <% @room.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= f.label :name, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :name, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-600",
                               placeholder: "e.g. General Discussion" %>
    </div>
    
    <div>
      <%= f.label :description, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_area :description, rows: 4, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-600",
                                             placeholder: "What's this room about?" %>
    </div>
    
    <div class="flex space-x-4">
      <%= f.submit "Create Room", class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancel", rooms_path, class: "bg-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-400" %>
    </div>
  <% end %>
</div>